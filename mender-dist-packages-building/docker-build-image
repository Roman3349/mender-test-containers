set -e

IMAGE_NAME_PREFIX=mendersoftware/mender-test-containers:mender-dist-packages-builder

# Parse args
if [ $# -ne 3 ]; then
    echo "usage: $0 distro release arch"
    exit 1
fi
DISTRO="${1}"
RELEASE="${2}"
ARCH="${3}"

docker build \
        --tag ${IMAGE_NAME_PREFIX}-${DISTRO}-${RELEASE}-${ARCH} \
        --build-arg DISTRO=${DISTRO} \
        --build-arg VERSION=${RELEASE} \
        --build-arg ARCH=${ARCH} \
        ${GPG_KEY_BUILD:+--build-arg GPG_KEY_BUILD="${GPG_KEY_BUILD}"} \
        $(dirname "$0")
